[Unit]
Description=Stops the pulseaudio service for the specified user
After=suspend.target
After=hybrid-sleep.target
After=sleep.target
Wants=reset-user-pins@%i.service

[Service]
Environment=DBUS_SESSION_BUS_ADDRESS=unix:path=/run/user/1000/bus
ExecStart=/bin/systemctl --user stop pulseaudio.s*
User=%i

[Install]
WantedBy=suspend.target
WantedBy=sleep.target
WantedBy=hybrid-sleep.target
